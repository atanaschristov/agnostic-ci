{
	"compilerOptions": {
		"declaration": true,
		"emitDeclarationOnly": true,
		"noEmit": false,
		"declarationDir": "dist/lib",
		"rootDir": "src",
		"outDir": "dist/lib",
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"declarationMap": true,
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"isolatedModules": false,
		"resolveJsonModule": true
	},
	"include": ["src/lib/**/*.ts"],
	"exclude": ["src/test", "src/demo", "src/__mocks__", "dist", "build"]
}
